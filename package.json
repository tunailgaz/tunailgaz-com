{
  "name": "tunailgaz-com",
  "version": "1.0.0",
  "description": "https://www.tunailgaz.com",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && npm run cp-html && npm run css-build && npm run js-build",
    "serve": "npm run build && http-server dist -c0 -g",
    "css-build": "node-sass --omit-source-map-url src/sass/style.scss dist/css/style.css",
    "js-build": "npx rollup -c",
    "cp-html" : "mkdir dist && cp src/index.html dist/ && cp -R src/html dist/pages",
    "deploy": "git subtree push --prefix dist origin gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tunailgaz/tunailgaz-com.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tunailgaz/tunailgaz-com/issues"
  },
  "homepage": "https://github.com/tunailgaz/tunailgaz-com#readme",
  "devDependencies": {
    "bulma": "^0.8.0",
    "dotenv": "^8.2.0",
    "http-server": "^0.12.0",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.0",
    "path": "^0.12.7",
    "rollup-plugin-loadz0r": "^0.7.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.3"
  }
}